{
   "compilerOptions": {
      "target": "es6",
      "lib": [ "es6", "dom" ],
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": false,
      "module": "CommonJS",
      "noEmitOnError": true,
      "removeComments": false,
      "sourceMap": true,
      "jsx": "react",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true
   },
   "include": [
      "./src/**/*.ts",
      "./src/**/*.tsx",
      "./test/**/*.ts"
   ],
   "exclude": [
      "node_modules"
   ],
   "awesomeTypescriptLoaderOptions": {
      "useCache": true,
      "useBabel": true
   },
   "strictPropertyInitialization": true,
   "ts-node": {
      "esm": true
   }
}